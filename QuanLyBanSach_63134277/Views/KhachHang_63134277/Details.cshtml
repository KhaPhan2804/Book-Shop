@model QuanLyBanSach_63134277.Models.KhachHang

@{
    ViewBag.Title = "Details";
    string gtinh = "";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}

<h4>THÔNG TIN CHI TIẾT</h4>
<table border="1" cellpadding="0" cellspacing="0" style="font-size:14px;margin-left:50px;">
    <tr>
        <td>
            <table cellpadding="2" cellspacing="10">
                <tr>
                    <td>Mã khách hàng:</td>
                    <td>@Html.DisplayFor(model => model.ma_KH)</td>
                </tr>
                <tr>
                    <td>Tên khách hàng:</td>
                    <td>@Html.DisplayFor(model => model.ten_KH)</td>
                </tr>
                <tr>
                    <td>Số điện thoại:</td>
                    <td>@Html.DisplayFor(model => model.sdt)</td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td>@Html.DisplayFor(model => model.email);</td>
                </tr>
                <tr>
                    <td>Địa chỉ:</td>
                    <td>@Html.DisplayFor(model => model.diachi)</td>
                </tr>
                <tr>
                    <td>Ngày sinh:</td>
                    <td>@Html.DisplayFor(model => model.ngaysinh)</td>
                </tr>
                <tr>
                    <td>Giới tính:</td>
                    <td>
                        @{if (Model.gioitinh == true)
                            { gtinh = "Nam"; }
                            else
                            { gtinh = "Nữ"; }
                        }
                        @gtinh
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
<p>

    @Html.ActionLink("Quay lại", "Index")
</p>
