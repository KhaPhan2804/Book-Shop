@model IEnumerable<QuanLyBanSach_63134277.Models.NhanVien>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenNV", rowsPerPage: 5);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")

}


<center><h2>DANH SÁCH NHÂN VIÊN</h2></center>

<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: red;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }
    </style>
</head>
    
<body>
    <a href="/NhanVien_63134277/Create" class="btn btn-block btn-dark">
        THÊM NHÂN VIÊN
    </a>
    <div id="gridContent">
        @ViewBag.TB
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
              columns: new[]  // colums in grid
             {
        grid.Column("ma_NV","Mã nhân viên"), //the model fields to display
        grid.Column("ten_NV","Tên nhân viên"),
        grid.Column("sdt","Số điện thoại"),
        grid.Column("diachi","Địa chỉ"),
        grid.Column("ngaysinh","Ngày sinh",format:@<text> @item.NgaySinh.ToString("dd/MM/yyyy")</text>),
grid.Column("chucvu","Chức vụ"),
grid.Column("Chức năng", format: @<text>
            <a href="@Url.Action("Edit",
                new { id = item.ma_NV})" class="btn btn-sm btn-success">Cập nhật</a>
            <a href="@Url.Action("Details",
                new { id = item.ma_NV})" class="btn btn-sm btn-info">Xem chi tiêt</a>
            <a href="@Url.Action("Delete",
                new { id = item.ma_NV})" class="btn btn-sm btn-danger">
                Xóa
            </a>
</text>),





}
)
    </div>
</body>

</html>